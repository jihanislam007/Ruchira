<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    android:orientation="vertical"
    android:background="@color/ash_bac">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginTop="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_ord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_bac"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Beat"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/total_bit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="000."
                    android:gravity="center"
                    android:textColor="@color/yellow_new"
                    android:textSize="18sp"/>

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Outlet"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/totalOutletTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="000."
                    android:gravity="center"
                    android:textColor="@color/yellow_new"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginTop="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_order_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/blue_bac">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todays Sell"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        android:id="@+id/today_sale_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00."
                        android:textColor="@color/yellow_new"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="16dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="16"
                        android:orientation="horizontal"
                        android:paddingBottom="24dp"
                        android:paddingTop="24dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:paddingLeft="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Yesterday's Sele"
                                    android:lines="2"
                                    android:textColor="@color/blue_bac"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/sale_yesterDay_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="00."
                                    android:lines="2"
                                    android:textColor="@color/yellow_new"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/yellow_new"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:paddingLeft="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.3">

                                <TextView
                                    android:id="@+id/sale_monthAccumulation"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="This Month Accumulation"
                                    android:textColor="@color/blue_bac"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7">

                                <TextView
                                    android:id="@+id/sale_monthAccumulation_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="N/A."
                                    android:textColor="@color/yellow_new"
                                    android:gravity="center_horizontal"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/yellow_new"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:paddingLeft="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/sale_month_week_avg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="This Month Week Avg"
                                    android:lines="2"
                                    android:textColor="@color/blue_bac"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/sale_month_week_avg_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="00."
                                    android:lines="2"
                                    android:textColor="@color/yellow_new"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/yellow_new"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/avg_target_visit_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="This Month Day Avg"
                                    android:lines="2"
                                    android:textColor="@color/blue_bac"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/sale_month_day_avg_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="00."
                                    android:textColor="@color/yellow_new"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginTop="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/blue_bac">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Order"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"/>


                    <TextView
                        android:id="@+id/today_order_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00."
                        android:textColor="@color/yellow_new"
                        android:textSize="16sp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical|end"
                        android:layout_marginRight="16dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="16"
                        android:orientation="horizontal"
                        android:paddingBottom="24dp"
                        android:paddingTop="24dp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:paddingLeft="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/outlet_remained_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Yesterdays Order"
                                    android:lines="2"
                                    android:textColor="@color/blue_bac"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/order_yesterday_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="00."
                                    android:lines="2"
                                    android:textColor="@color/yellow_new"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/yellow_new"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:paddingLeft="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.3">

                                <TextView
                                    android:id="@+id/outlet_visited_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="This Month Accumulation"
                                    android:textColor="@color/blue_bac"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7">

                                <TextView
                                    android:id="@+id/order_monthAccumulation_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="N/A."
                                    android:textColor="@color/yellow_new"
                                    android:gravity="center_horizontal"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/yellow_new"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:paddingLeft="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/achive_percent_sr_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="This Month Week Avg"
                                    android:lines="2"
                                    android:textColor="@color/blue_bac"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/order_monthWeekly_avg_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="00."
                                    android:lines="2"
                                    android:textColor="@color/yellow_new"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/yellow_new"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:paddingLeft="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/achive_today_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="This Month Day Avg"
                                    android:lines="2"
                                    android:textColor="@color/blue_bac"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/order_monthDailyAvg_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="00."
                                    android:lines="2"
                                    android:textColor="@color/yellow_new"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

</LinearLayout>