<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rectangle_shape_show_black"
            android:text="show"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/product_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Chocolate 250"
            android:maxWidth="100dp"
            android:maxLength="20"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/promotion_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/product_name_txt"
            android:layout_toLeftOf="@+id/end_date_txt"
            android:layout_toRightOf="@+id/product_name_txt"
            android:text="1 free for 3 buy"
            android:maxLength="20"
            android:maxWidth="100dp"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/end_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.09.2016"
            android:layout_marginLeft="5dp"
            android:textColor="@color/Black"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/show_txt"
            android:layout_toStartOf="@+id/show_txt" />
    </RelativeLayout>

</LinearLayout>